<div class="page-width">
  <div class="suitable-section">
    <div class="suitable-left">
      {% for block in section.blocks %}
      <h1>{{ block.settings.heading }}</h1>
      <p>{{ block.settings.text }}</p>
      <div class="shop-btn">
        <a href="{{ routes.all_products_collection_url }}">{{ block.settings.button_label_1 }}</a>
      </div>
    {% endfor %}
    </div>
    <div class="suitable-right">
      <div class="suitable-icons">
        <div class="icons-up">
          <div class="icon-div">
            {% render 'icon-peer' %}
            <p>Hergestellt in Deutschland</p>
          </div>
          <div class="icon-div">
            {% render 'icon-peer' %}
            <p>Hergestellt in Deutschland</p>
          </div>
        </div>
        <div class="icons-up">
          <div class="icon-div">
            {% render 'icon-heart' %}
            <p>Hergestellt in Deutschland</p>
          </div>
          <div class="icon-div">
            {% render 'icon-mobile' %}
            <p>Hergestellt in Deutschland</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

